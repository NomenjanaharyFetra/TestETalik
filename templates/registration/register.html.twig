{# page d'inscription #}
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center container-page">
        <div class="login-card shadow p-5">
            <div class="text-center mb-4">
                <h2>Inscription</h2>
                {{ form_errors(registrationForm) }}
                    {% for label,messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-danger">{{message | raw }}</div>
                    {% endfor %}
                {% endfor %}
                </div>
                        {{ form_start(registrationForm,{'attr': {'class': 'form-change-erreur'}}) }}
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Email'}}) }}
                        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Mot de passe'}}) }}
                        {{ form_row(registrationForm.confirmPassword, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Confirmer mot de passe'}}) }}
                        <button class="btn btn-primary w-100 mt-3" id="submit-id-submit" type="submit">S'inscrire</button>

                    {{ form_end(registrationForm) }}
            <div class="text-center mt-4">
                <p class="text-muted">Avez vous de compte? <a href="{{ path('app_login')}}" class="text-decoration-none">Se connecter</a></p>
            </div>
        </div>
    </div>
{% endblock %}
